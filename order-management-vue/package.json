{
  "name": "order-management",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^6",
    "express": "^4"
  },
  "devDependencies": {
    "@sap/eslint-plugin-ui5-jsdocs": "^2.0.5",
    "@sap/ux-specification": "^1.102.10",
    "@sapui5/ts-types": "^1.92.2",
    "concurrently": "^7.5.0",
    "eslint": "^7.32.0",
    "sqlite3": "^5.1.2"
  },
  "scripts": {
    "start": "cds watch",
    "watch-ordermanagement": "cds watch --open ordermanagement/webapp/index.html?sap-ui-xx-viewCache=false",
    "dev": "concurrently --kill-others \"npm start\" \"npm --prefix ./app/vue-project/ run dev\""
  },
  "engines": {
    "node": "^16.15"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "i18n": {
      "for_sql": [
        "en",
        "it",
        "de"
      ]
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "db/order.db"
        }
      }
    }
  },
  "sapux": [
    "app/ordermanagement"
  ]
}