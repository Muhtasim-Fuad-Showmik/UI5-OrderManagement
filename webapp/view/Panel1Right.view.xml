<mvc:View
    controllerName="ordermanagement.controller.Panel1Right"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <VBox>
        <VBox class="sapUiMediumMarginBottom">
            <FlexBox
                fitContainer="true"
                alignItems="Start"
                alignContent="Stretch"
                justifyContent="Start">
                <ComboBox
                    width="90%"
                    class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                    selectedKey="Ce"
                    items="{
                        path: 'consignment>/ConsignmentPersonTypes',
                        sorter: { path: 'text' }
                    }">
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                    <core:Item key="{consignment>key}" text="{consignment>text}"/>
                </ComboBox>
                <Input
                    width="100%"
                    class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                    placeholder="{i18n>ConsigneeOfGoodsName}"
                    valueLiveUpdate="true">
                    <layoutData>
                        <FlexItemData growFactor="3"/>
                    </layoutData>
                </Input>
            </FlexBox>
            <Input
                width="100%"
                class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                placeholder="{i18n>ConsignmentVia}"
                valueLiveUpdate="true"/>
            <FlexBox
                width="100%"
                alignItems="Start"
                justifyContent="Start">
                <Input
                    width="90%"
                    class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                    placeholder="{i18n>PostalCode}"
                    valueLiveUpdate="true">
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                </Input>
                <Input
                    width="100%"
                    class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                    placeholder="{i18n>City}"
                    valueLiveUpdate="true">
                    <layoutData>
                        <FlexItemData growFactor="3"/>
                    </layoutData>
                </Input>
            </FlexBox>
            <FlexBox
                width="100%"
                alignItems="Start"
                justifyContent="Start">
                <ComboBox
                    width="90%"
                    class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                    selectedKey="-"
                    items="{
                        path: 'consignment>/Cities',
                        sorter: { path: 'text' }
                    }">
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                    <core:Item key="{consignment>key}" text="{consignment>text}"/>
                </ComboBox>
                <ComboBox
                    width="100%"
                    class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                    selectedKey="-"
                    items="{
                        path: 'consignment>/Countries',
                        sorter: { path: 'text' }
                    }">
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                    <core:Item key="{consignment>key}" text="{consignment>text}"/>
                </ComboBox>
            </FlexBox>
        </VBox>

        <VBox class="sapUiMediumMarginBottom">
            <FlexBox
                fitContainer="true"
                alignItems="Start"
                alignContent="Stretch"
                justifyContent="Start">
                <ComboBox
                    width="90%"
                    class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                    selectedKey="Fr"
                    items="{
                        path: 'consignment>/ForwardingPersonTypes',
                        sorter: { path: 'text' }
                    }">
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                    <core:Item key="{consignment>key}" text="{consignment>text}"/>
                </ComboBox>
                <Input
                    width="100%"
                    class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                    placeholder="{i18n>ForwarderName}"
                    valueLiveUpdate="true">
                    <layoutData>
                        <FlexItemData growFactor="3"/>
                    </layoutData>
                </Input>
            </FlexBox>
            <Input
                width="100%"
                class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                placeholder="{i18n>ConsignmentVia}"
                valueLiveUpdate="true"/>
            <FlexBox
                width="100%"
                alignItems="Start"
                justifyContent="Start">
                <Input
                    width="90%"
                    class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                    placeholder="{i18n>PostalCode}"
                    valueLiveUpdate="true">
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                </Input>
                <Input
                    width="100%"
                    class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                    placeholder="{i18n>City}"
                    valueLiveUpdate="true">
                    <layoutData>
                        <FlexItemData growFactor="3"/>
                    </layoutData>
                </Input>
            </FlexBox>
            <FlexBox
                width="100%"
                alignItems="Start"
                justifyContent="Start">
                <ComboBox
                    width="90%"
                    class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                    selectedKey="-"
                    items="{
                        path: 'consignment>/Cities',
                        sorter: { path: 'text' }
                    }">
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                    <core:Item key="{consignment>key}" text="{consignment>text}"/>
                </ComboBox>
                <ComboBox
                    width="100%"
                    class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd"
                    selectedKey="-"
                    items="{
                        path: 'consignment>/Countries',
                        sorter: { path: 'text' }
                    }">
                    <layoutData>
                        <FlexItemData growFactor="1"/>
                    </layoutData>
                    <core:Item key="{consignment>key}" text="{consignment>text}"/>
                </ComboBox>
            </FlexBox>
        </VBox>
    </VBox>
</mvc:View>